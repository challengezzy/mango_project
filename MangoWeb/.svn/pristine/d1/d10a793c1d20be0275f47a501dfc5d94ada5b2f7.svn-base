	<target name="exportWar">
		<war destfile="${DEPLOY_DIR}/../${mainName}.war" webxml="${basedir}/../WebRoot/WEB-INF/web.xml">
			<!--<lib dir="${DEPLOY_DIR}/WEB-INF/lib" />-->
			<fileset dir="${DEPLOY_DIR}">
				<includesfile />
			</fileset>
		</war>
	</target>
	<target name="clean">
