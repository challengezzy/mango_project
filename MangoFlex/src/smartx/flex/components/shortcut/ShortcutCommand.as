	public class ShortcutCommand
	{
		public var catalog:String;//快捷键命令目录
		
		public var command:String;//快捷键命令
		
		public var ctrl:Boolean = false;//ctrl健是否激活
		
		public var shift:Boolean = false;//shift健是否激活
		
		public var alt:Boolean = false;//alt健是否激活
		
		public var charCode:String;//键盘按键
		
		public function ShortcutCommand(_catalog:String="", _command:String="", _charCode:String="", 
										_ctrl:Boolean=false,_alt:Boolean=false,_shift:Boolean=false)
		{
			catalog = _catalog;
			command = _command;
			charCode = _charCode;
			
		}
	}
}